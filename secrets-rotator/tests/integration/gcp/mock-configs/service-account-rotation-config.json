{
  "source": {
    "name": "${SOURCE_NAME}",
    "action": {
      "type": "GCP_SERVICE_ACCOUNT_KEY_SOURCE",
      "serviceAccountName": "${GCP_SERVICE_ACCOUNT_NAME}",
      "projectId": "${GCP_PROJECT_ID}",
      "authentication": {
        "type": "GCP_SERVICE_ACCOUNT",
        "scopes": [
          "test-scope"
        ],
        "credentials": "${GCLOUD_KEY}"
      }
    }
  },
  "consumers": [
    {
      "name": "CircleCI",
      "action": {
        "type": "API_CONSUMER",
        "url": "${CIRCLECI_CONTEXT_ENV_VARIABLE_UPDATE_URL}",
        "method": "PUT",
        "body": {
          "value": "${{SECRET_VALUE}}"
        },
        "authentication": {
          "type": "BASIC",
          "userName": "${CIRCLECI_API_TOKEN}",
          "password": ""
        }
      }
    }
  ]
}
